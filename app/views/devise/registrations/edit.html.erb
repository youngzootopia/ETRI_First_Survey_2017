<div class="row row-centered">
  <div class="col-xs-12 col-sm-12 col-md-10 col-lg-9 col-centered">
  <h2>내 정보 변경</h2>
  <form class="edit_user" id="edit_user" action="/users" accept-charset="UTF-8" method="post">
    <input name="utf8" type="hidden" value="&#x2713;"/>
    <input type="hidden" name="_method" value="put"/>

    <div class="col-xs-12 col-sm-2 col-md-2 col-lg-2 col-centered">
      <label for="user_email">Email</label>
    </div><br/>
    <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 col-centered">
      <input autofocus="autofocus" readonly="readonly" type="email" value="user[email]" name="user[email]" id="user_email"/>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for:
      <%= resource.unconfirmed_email %></div>
    <% end %>
    <div class="col-xs-12 col-sm-2 col-md-2 col-lg-2 col-centered">
      <label for="user_password">변경 비밀번호</label><br/>
    </div>
    <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 col-centered">
      <input autocomplete="off" placeholder="6글자 이상을 입력하세요." type="password" name="user[password]" id="user_password"/>
    </div>

    <div class="col-xs-12 col-sm-2 col-md-2 col-lg-2 col-centered">
      <label for="user_password_confirmation">비밀번호 확인</label><br/>
    </div>
    <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 col-centered">
      <input autocomplete="off" type="password" name="user[password_confirmation]" id="user_password_confirmation"/>
    </div>

    <div class="col-xs-12 col-sm-2 col-md-2 col-lg-2 col-centered">
      <label for="user_current_password">현재 비밀번호</label>
    </div>
    <div class="col-xs-12 col-sm-4 col-md-4 col-lg-4 col-centered">
      <input autocomplete="off" type="password" name="user[current_password]" id="user_current_password"/>
    </div>

    <button type="submit" class="btn btn-lg btn-default btn-group-justified">변경 저장
      <span class="glyphicon glyphicon-floppy-disk"></span>
    </button>
  </form>
</div>
</div>

<div class="row row-centered">
  <!--signup section-->
  <div class="col-xs-12 col-sm-12 col-md-10 col-lg-9 col-centered">
